#include <stdio.h>
int main() {
char operador;
double num1, num2, resultado;
printf("Digite um operador (+ - * /): ");
scanf("%c", &operador);
printf("Digite o primeiro valor: ");
scanf("%lf", &num1);
printf("Digite o segundo valor: ");
scanf("%lf", &num2);
switch(operador){
case'+': resultado = num1+num2;
printf("Resultado = %lf", resultado);
break;
case'-': resultado = num1-num2;
printf("Resultado = %lf", resultado);
break;
case'*': resultado = num1*num2;
printf("Resultado = %lf", resultado);
break;
case'/': resultado = num1/num2;
printf("Resultado = %lf", resultado);
break;
default:
printf("Digite um operador v√°lido");}
return 0;
}
